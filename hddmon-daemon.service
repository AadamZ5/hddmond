[Unit]
Description=hddmon daemon that keeps track of attached hard drives.
Requires=udev.service

[Service]
ExecStart=/usr/bin/python3 /etc/hddmon/hddmon-daemon.py
Restart=on-failure
StandardOutput=file:/etc/hddmon/o.log
StandardError=file:/etc/hddmon/e.log
User=root
Group=root

[Install]
Alias=hddmond


